# LineageOS Build Configuration
# Device: Samsung Galaxy S10 5G (beyondx)

# Device Configuration
DEVICE_CODENAME=beyondx
DEVICE_BRANCH=lineage-22.2

# Build Type
BUILD_TYPE=userdebug
TARGET_BUILD_VARIANT=userdebug

# Parallel Jobs (adjust based on CPU cores)
REPO_SYNC_JOBS=4
BUILD_JOBS=16

# ccache Configuration
USE_CCACHE=1
CCACHE_SIZE=50G
CCACHE_COMPRESS=1

# Build Options
WITH_SU=false
SIGN_BUILDS=false

# Repository URLs
LINEAGE_MANIFEST_URL=https://github.com/LineageOS/android.git
THEMUPPETS_MANIFEST_URL=https://github.com/TheMuppets/manifests.git

# Git Configuration
GIT_USER_EMAIL=jhkim2@goqual.com
GIT_USER_NAME=Junghan Kim

# Java Memory Settings
ANDROID_JACK_VM_ARGS=-Dfile.encoding=UTF-8 -XX:+TieredCompilation -Xmx16g

# Output Directory
OUT_DIR=/home/builder/output

# Enable Color Output
USE_COLOR_OUTPUT=true

# Timezone
TZ=Asia/Seoul